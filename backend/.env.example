# Database
DATABASE_URL=postgresql://user:password@host:port/database

# Authentication
JWT_SECRET=your_jwt_secret_key

# Email Service (using Nodemailer)
EMAIL_SERVICE_HOST=smtp.gmail.com # e.g., smtp.gmail.com
EMAIL_SERVICE_PORT=587 # e.g., 587 or 465
EMAIL_SERVICE_USER=your_email@gmail.com
EMAIL_SERVICE_PASS=your_email_app_password # For Gmail, use an App Password

# SMS Notification (Mocked)
MOCK_SMS_ENABLED=true # Set to true to log SMS messages to console

# File Uploads
UPLOAD_DIR=./uploads